@model AttendanceSystem.Models.EventViewModel

@{
    ViewData["Title"] = "CreateEvent";
}
<head>
    <link rel="stylesheet" href="~/lib/Chosen_v/chosenjs/chosen.css" />

</head>
<h1 style="        color: #1c2e4a
">
    Create Your Own Event!
</h1>

<h4 style=" color:cadetblue">New Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEvent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Event.Name" class="control-label"></label>
                <select asp-for="Event.Name" class="form-control">
                    <option value="Mo2tmar"> Mo2tmar</option>
                    <option value="10 ayam saifia"> 10 ayam saifia </option>


                </select>
                <span asp-validation-for="Event.Name" class="text-danger"></span>

                <div class="form-group">
                    <h4 style="        color: cadetblue
">
                        Set Time:
                    </h4>
                    <label class="control-label"> from:</label>
                    <input class="form-control" type="date" />
                    <label class="control-label"> to:</label>
                    <input class="form-control" type="date" />


                    <span asp-validation-for="Event.Time" class="text-danger"></span>
                </div>

            </div>
            <h3>Select Students</h3>


            <select multiple="multiple" class="multi-select" id="my_multi_select1" asp-for="StudentID" asp-items="@Model.Students" style="    width:100%"></select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary  text-white table-bordered active" />
            </div>
        </form>
        <div>
        </div>
    </div>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
<script src="~/lib/Chosen_v/chosenjs/chosen.proto.js/"></script>
<script src="~/lib/Chosen_v/chosenjs/chosen.jquery.js/"></script>
<script>

    $(".chosen-select").chosen();
    $('a').click(function () {
        $(".chosen-select").val('').trigger("liszt:updated");
    });
</script>
